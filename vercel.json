{
  "framework": "nextjs",
  "buildCommand": "npm run db:generate && cd apps/web && npm run build",
  "outputDirectory": "apps/web/.next",
  "installCommand": "npm ci",
  "ignoreCommand": "git diff HEAD^ HEAD --quiet . ':(exclude)README.md'",
  "env": {
    "NODE_ENV": "production",
    "PRISMA_GENERATE_SKIP_AUTOINSTALL": "true"
  },
  "functions": {
    "apps/web/src/app/api/timers/*/checkin/route.ts": {
      "maxDuration": 30,
      "memory": 512
    },
    "apps/web/src/app/api/timers/*/cancel/route.ts": {
      "maxDuration": 30,
      "memory": 512
    },
    "apps/web/src/app/api/timers/route.ts": {
      "maxDuration": 30,
      "memory": 512
    }
  }
}